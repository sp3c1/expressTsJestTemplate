{
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "typeAcquisition": {
        "enable": false
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "src/test/**/*.ts"
    ],
    "include": [
        "src/**/*.ts",
        "typings/definitions/index.d.ts"
    ]
}